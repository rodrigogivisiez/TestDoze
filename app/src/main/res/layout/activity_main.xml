<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.zte.testdoze.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="闹钟Alarm周期间隔(秒): "
            android:textSize="16sp"/>

        <EditText
            android:id="@+id/et_interval_seconds"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"
            android:text="60"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_check_battery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="检查电池优化状况"/>

            <Button
                android:id="@+id/btn_pop_ignore_battery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="弹出电池优化设置窗"/>

            <Button
                android:id="@+id/btn_start_setRepeating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="启动setRepearting"/>

            <Button
                android:id="@+id/btn_stop_setRepeating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="停止setRepearting"/>

            <Button
                android:id="@+id/btn_start_setInexactRepeating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="启动setInexactRepeating"/>

            <Button
                android:id="@+id/btn_stop_setInexactRepeating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="停止setInexactRepeating"/>

            <Button
                android:id="@+id/btn_start_setExact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="启动setExact"/>

            <Button
                android:id="@+id/btn_stop_setExact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="停止setExact"/>

            <Button
                android:id="@+id/btn_start_jobScheduler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="启动jobScheduler"/>

            <Button
                android:id="@+id/btn_stop_jobScheduler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="停止jobScheduler"/>

            <Button
                android:id="@+id/btn_start_setAndAllowWhileIdle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="启动setAndAllowWhileIdle"/>

            <Button
                android:id="@+id/btn_stop_setAndAllowWhileIdle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="停止setAndAllowWhileIdle"/>

            <Button
                android:id="@+id/btn_start_setExactAndAllowWhileIdle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="启动setExactAndAllowWhileIdle"/>

            <Button
                android:id="@+id/btn_stop_setExactAndAllowWhileIdle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="停止setExactAndAllowWhileIdle"/>

            <Button
                android:id="@+id/btn_start_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="启动timer"/>

            <Button
                android:id="@+id/btn_stop_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="停止timer"/>

            <Button
                android:id="@+id/btn_start_thread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="启动thread"/>

            <Button
                android:id="@+id/btn_stop_thread"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="停止thread"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
